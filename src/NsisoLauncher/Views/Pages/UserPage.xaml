<Page x:Class="NsisoLauncher.Views.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NsisoLauncher.Views.Pages"
      xmlns:userControl="clr-namespace:NsisoLauncher.Views.Controls"
      xmlns:vm="clr-namespace:NsisoLauncher.ViewModels.Pages"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">
    <Page.DataContext>
        <vm:UserPageViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{DynamicResource MahApps.Brushes.Accent}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10">
                <StackPanel>
                    <TextBlock Text="登录的用户:" FontSize="16" Foreground="White" Margin="0,0,0,10"/>
                    <TextBlock Text="nsisogf@163.com" Foreground="White" FontSize="26"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <iconPacks:PackIconFontAwesome Kind="CircleSolid" Margin="0,0,5,0" Foreground="LawnGreen"/>
                        <TextBlock Text="在线" Foreground="White"/>
                        <TextBlock Text="Mojang正版验证" Foreground="White" Margin="10,0,0,0"/>
                    </StackPanel>
                   
                </StackPanel>
                <!--<Button Margin="20,0" Content="切换用户" VerticalAlignment="Bottom"/>-->
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20">
                <Button Style="{StaticResource MahApps.Styles.Button.Flat}" Content="切换用户" Margin="10,0"/>
                <Button Style="{StaticResource MahApps.Styles.Button.Flat}" Content="注销"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1" Background="{DynamicResource MahApps.Brushes.ThemeBackground}">
            <userControl:Skin3dViewer Width="200"/>
        </Grid>
    </Grid>
</Page>
